<header>
  <div class="container">
    <div class="row">
      <div class="header-contents">
        <h1>
          <a class="title" href="/">Quizer</a>
        </h1>
        
        <% if user_signed_in? %>
          <%= link_to "/users/#{current_user.id}" do %>
            <%= image_tag current_user.user_image.url, class: "icon_image" %>
        <% end %>
          <div class="user_nav">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            <%= link_to  "Create a quiz", "/quizzes/new", class: "post" %>
          </div>
        <% else %>
          <div class="user_nav">
            <%= link_to "ログイン", new_user_session_path, class: 'post' %>
            <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>