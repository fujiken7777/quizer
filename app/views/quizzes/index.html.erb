  <div class="search-bar">
    <div class="search-title">What will you teach today?
      <%= form_with(url: "#", local: true, method: :get, class: "search-form") do |form| %>
        <i class="search-icon fas fa-search"></i>
        <%= form.text_field :keyword, placeholder: "Search for Quizzes", class: "search-input" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>
    </div>

    <div class="container">
      <div class="card-list">
        <% @quizzes.each do |quiz| %>
          <%= link_to "/quizzes/#{quiz.id}", method: :get do %>
            <div class="quiz-card">
              <img src="<%= quiz.image %>" class="card-img-top" alt="...">
              <div class="card-body">
                <p class="card-text"><%= simple_format(quiz.text) %></p>
                <ul class="more_list">
                  <li>
                    <%= link_to '削除', "/quizzes/#{quiz.id}", method: :delete %>
                  </li>
                  <li>
                    <%= link_to '編集', "/quizzes/#{quiz.id}/edit", method: :get %>
                  </li>
                </ul>
              </div>
            </div>
          <% end %>
        <% end %>
