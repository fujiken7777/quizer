<%= render partial: "header" %>
<div class="main-contents">
  <%= render partial: "genre" %>
  <div class="search-bar">
    <div class="search-title">What will you teach today?
      <%= form_with(url: quizzes_searches_path, local: true, method: :get, class: "search-form") do |form| %>
        <i class="search-icon fas fa-search"></i>
        <%= form.text_field :keyword, placeholder: "Search for Quizzes", class: "search-input" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>
    </div>

    <div class="index-contents">
      <div class="main-view">
        <div class="white-view">
          <div class="card-list">
            <% @quizzes.each do |quiz| %>
              <%= link_to "/quizzes/#{quiz.id}", method: :get, class: "quiz-link" do %>
                <div class="quiz-body">
                  <img src="<%= quiz.image %>" class="card-img-top" alt="..." width="100" height="130">
                  <div class="card-text">
                    <%= quiz.name.truncate(11) %>
                  </div>
                  <div class="iine-icon">
                    <i class="fas fa-heart heart"></i>
                    <div class="likes-count">
                      <%= quiz.likes_count %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render partial: "footer" %>



